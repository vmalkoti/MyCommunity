<?xml version="1.0" encoding="utf-8"?>

<layout>


    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/req_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/req_item_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Request Type" />

        <TextView
            android:id="@+id/req_item_apt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@id/req_item_type"
            app:layout_constraintTop_toBottomOf="@id/req_item_type"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Apt #1234" />

        <TextView
            android:id="@+id/req_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="@id/req_item_type"
            app:layout_constraintTop_toBottomOf="@id/req_item_type"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@tools:sample/date/mmddyy" />

        <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/black"
            />
            -->

    </android.support.constraint.ConstraintLayout>

</layout>