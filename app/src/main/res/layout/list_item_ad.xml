<?xml version="1.0" encoding="utf-8"?>

<layout>


    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ad_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ad_item_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/lorem[3]" />



        <TextView
            android:id="@+id/ad_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintLeft_toLeftOf="@id/ad_item_title_tv"
            app:layout_constraintTop_toBottomOf="@id/ad_item_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@tools:sample/date/mmddyy" />

        <TextView
            android:id="@+id/ad_item_by_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toRightOf="@id/ad_item_title_tv"
            app:layout_constraintTop_toBottomOf="@id/ad_item_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@tools:sample/full_names" />

    </android.support.constraint.ConstraintLayout>

</layout>